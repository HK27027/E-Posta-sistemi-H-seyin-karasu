@{
    ViewData["Title"] = "Login";
}
<div class="container " >
    <div ng-if="account.danger==true" class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
        <strong>Uyarı</strong>  <div ng-repeat=" t in account.dangerText.data.statusTexts"> {{t}}.</div>

        <button ng-click="account.danger=false;" type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div ng-if="account.succes==true" class="alert alert-success  alert-dismissible fade show" role="alert">
        <strong>Başarılı</strong>  <div ng-repeat=" t in account.succesText.data.statusTexts"> {{t}}.</div>

        <button ng-click="account.succes=false;" type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="form-wrapper">
        <div class="form-container">
            <p class="title">Giriş yap</p>
            <form class="form">
                <input ng-model="account.form.email" type="email" class="input" placeholder="Email">
                <input ng-model="account.form.password" type="password" class="input" placeholder="Şifre">
                <button ng-click="account.login();" class="form-btn">Giriş yap</button>
            </form>
            <p class="sign-up-label">
                Hesabın yokmu?<span class="sign-up-link"> <a href="/Register">Kayıt ol</a> </span>
            </p>
        
        </div>
    </div>
</div>

