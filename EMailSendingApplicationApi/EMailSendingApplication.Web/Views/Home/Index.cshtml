@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center " ng-init="account.loginControl();account.accountInfo();" style="margin-top: 100px; margin-left:150px;">
    <h1 class="display-4">Merhaba {{account.data.name}} ,E-Posta yönetim sistemine hoşgeldiniz</h1>

  


</div>
<div class="container" style="margin-top: 80px;  margin-left:140px;">
    <div class="row text-center">
        <div class="col-md-4 justify-content-center">
            <div class="notifications-container">
                <div class="info">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="info-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="info-prompt-wrap">
                            <h3 class="">
                                Sistemde kayıtlı kişi sayısı:
                                <a class="info-prompt-link" href="/Users">{{account.info[0].userCount}} </a>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="notifications-container">
                <div class="info">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="info-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="info-prompt-wrap">
                            <h3 class="">
                                Sistemde kayıtlı E-Posta sayısı:
                                <a class="info-prompt-link" href="Emails">{{account.info[0].emailCount}} </a>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="notifications-container">
                <div class="info">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="info-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="info-prompt-wrap">
                            <h3 class="">
                                Gönderilen E-Posta sayısı:
                                <a class="info-prompt-link" href="EmailSent">{{account.info[0].emailSentCount}} </a>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>